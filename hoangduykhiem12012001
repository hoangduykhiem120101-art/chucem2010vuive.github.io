  <canvas id="tulipGarden"></canvas>

  <audio id="bgm" preload="auto" loop>
    <source src="https://cdn.pixabay.com/audio/2022/11/16/audio_37fa3e3f79.mp3" type="audio/mpeg">
  </audio>

  <script>
    const btn = document.getElementById('btnOpen');
    const env = document.getElementById('envelope');
    const stage = document.getElementById('stage');
    const letterWrap = document.getElementById('letterWrap');
    const bgm = document.getElementById('bgm');

    btn.addEventListener('click', async ()=>{
      env.classList.add('open');
      try{ await bgm.play(); }catch(e){}
      setTimeout(()=>{
        stage.style.display='none';
        letterWrap.classList.add('show');
      }, 1600);
    });

    // Hi·ªáu ·ª©ng c√°nh hoa bay
    const canvas = document.getElementById('tulipGarden');
    const ctx = canvas.getContext('2d');
    function resize(){ canvas.width = innerWidth; canvas.height = Math.max(260, innerHeight*0.58); }
    resize(); addEventListener('resize', resize);

    const petals = Array.from({length: 22}).map(()=> ({
      x: Math.random()*innerWidth,
      y: Math.random()*canvas.height,
      emoji: ['üå∏','üíó','üå∑'][Math.floor(Math.random()*3)],
      speed: .5 + Math.random(),
      drift: .2 + Math.random()*.6,
    }));

    function draw(){
      ctx.clearRect(0,0,canvas.width,canvas.height);
      ctx.font='20px serif';
      petals.forEach(p=>{
        ctx.save(); ctx.globalAlpha=.9; ctx.fillText(p.emoji,p.x,p.y); ctx.restore();
        p.y += p.speed; p.x += Math.sin(p.y*.02)*p.drift;
        if(p.y>canvas.height){ p.y=-20; p.x=Math.random()*innerWidth; }
      });
      requestAnimationFrame(draw);
    }
    draw();
  </script>
